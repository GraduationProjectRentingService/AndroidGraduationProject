<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sizeOfMiddleMargin">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_top10_title"
            android:textSize="@dimen/textSizeOfMainTitle"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvGoMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/text_see_more"
            android:drawableRight="@drawable/go"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightOfHouseListViewItem"
        android:layout_marginLeft="@dimen/sizeOfMiddleMargin"
        android:layout_marginRight="@dimen/sizeOfMiddleMargin"
        android:layout_marginBottom="@dimen/sizeOfMiddleMargin"
        >
    </android.support.v7.widget.RecyclerView>

</LinearLayout>