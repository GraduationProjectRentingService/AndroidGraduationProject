<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp">
    <ImageView
        android:id="@+id/ivHouse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/test_p_2"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/sizeOfLagerMargin"
        android:background="@drawable/bg_black_45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sizeOfMiddleMargin"
        >
        <ImageView
            android:visibility="gone"
            android:id="@+id/ivLike"
            android:layout_width="@dimen/sizeOfLikeIcon"
            android:layout_height="@dimen/sizeOfLikeIcon"
            android:src="@drawable/like_white_icon_selector"
            android:layout_marginTop="@dimen/sizeOfLittleMargin"
            android:layout_marginLeft="@dimen/sizeOfLagerMargin"
            android:layout_marginRight="@dimen/sizeOfLagerMargin"
            android:layout_gravity="center_horizontal"
            android:focusable="false"/>
        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥233"
            android:textColor="@color/colorMainYellow"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/sizeOfMiddleMargin"
            android:layout_marginBottom="@dimen/sizeOfLittleMargin"
            android:textSize="@dimen/textSizeOfItemMoney"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起/晚"
            android:textColor="@color/white_45"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/sizeOfLittleMargin"
            android:textSize="10sp"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="@dimen/sizeOfHomeownerImage"
        android:layout_height="@dimen/sizeOfHomeownerImage"
        android:src="@mipmap/ic_logo"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/sizeOfLagerMargin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="超精装亲海300平方私家庭院茶室独享"
            android:layout_marginTop="@dimen/sizeOfMiddleMargin"
            android:layout_marginLeft="@dimen/sizeOfLagerMargin"
            android:layout_marginBottom="@dimen/sizeOfLittleMargin"
            android:textSize="@dimen/textSizeOfVHouseListItemTitle"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="整套出租/5张床/适合7人住-5.0分/30点评"
            android:layout_marginLeft="@dimen/sizeOfLagerMargin"
            android:layout_marginBottom="@dimen/sizeOfMiddleMargin"
            android:lines="2"
            android:textColor="@color/white_45"/>
    </LinearLayout>


</RelativeLayout>
